{{- if (eq .chezmoi.os "darwin") -}}
#!/bin/sh

# Install Mac Apps via Homebrew Cask

source /tmp/chezmoi-utils.sh

printf "${green}[20 - macOS] ${reset}"
{{- if or (lt 20 (atoi (env "SCRIPTS_START_AT"))) (env "SKIP_APPS") }}
echo "Skip installing Mac Apps via Homebrew Cask"
exit 0
{{ else }}
echo "Install Mac Apps via Homebrew Cask"
{{- end }}

set -eufo pipefail

{{ $taps := list -}}

{{ $brews := list -}}

{{ $casks := list
  "lastpass"
  "alfred"
  "discord"
  "google-chrome"
  "kitty"
  "microsoft-edge"
  "spotify"
  "visual-studio-code"
  "google-drive"
  "zoom"
  "android-studio"
  "hammerspoon"
  "streamlabs-obs"
  "iterm2"
  "signal"
-}}

echo "Opening edge to setup"
open -a "Microsoft edge"

brew bundle --no-lock --file=/dev/stdin <<EOF || :
{{ range ($taps | sortAlpha | uniq) -}}
tap "{{ . }}"
{{ end }}
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end }}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end }}
EOF
{{ end -}}
